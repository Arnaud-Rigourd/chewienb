<div class="container form_search">
  <div class="form_taille">

    <%= form_with url: offers_path, method: :get do %>
      <div class="d-flex">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Trouver un vaisseau"
        %>
        <%= button_tag type: 'submit', class: "btn_search" do %>
          <% image_tag("icon_f_millenium.svg")%>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
