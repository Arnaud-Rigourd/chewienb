<h1>Dashboard - All my bookings</h1>

<%# J3 %>
<div class="dashboard-container container">
  <div class="my-bookings">
  <h2>Current bookings</h2>
    <ul>
      <% @bookings.each do |b| %>
        <% if (b.start_date && b.end_date).present? %>
          <% if Date.today <= b.start_date %>
            <div class="resa">
              <li><%= b.offer.title %></li>
              <li>From: <%= b.start_date %></li>
              <li>Until: <%= b.end_date %></li>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div class="my-bookings">
  <h2>Old bookings</h2>
    <ul class="booking">
      <% @bookings.each do |b| %>
        <% if (b.start_date && b.end_date).present? %>
          <% if Date.today > b.end_date %>
            <div class="resa">
              <li><%= b.offer.title %></li>
              <li>From: <%= b.start_date %></li>
              <li>Until: <%= b.end_date %></li>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>

  <p><%= link_to "Back to starships", offers_path %></p>
</div>
