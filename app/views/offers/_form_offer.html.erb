<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="grid_form col-12 col-lg-6 p-5">
      <h1 class="titre_form">Nouvelle offre</h1>
      <%= simple_form_for @offer do |f| %>
      <div class="form_title">
        <%= f.input :title, label: 'Titre', input_html: { class: "case_form" }%>
        <%= f.input :description, input_html: { class: "case_form" } %>
        <%= f.input :price, label: 'Prix', input_html: { class: "case_form" } %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'Valider', class: 'btn btn_form_offer' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
