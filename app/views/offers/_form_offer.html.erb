<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="grid_form col-12 col-lg-6 p-5">
      <h1 class="titre_form">Create a new offer</h1>
      <%= simple_form_for @offer do |f| %>
      <div class="form_title">
        <%= f.input :title, input_html: { class: "case_form" }%>
        <%= f.input :description, input_html: { class: "case_form" } %>
        <%= f.input :price, input_html: { class: "case_form" } %>
        <%= f.submit class: 'btn btn_form_offer' %>
      </div>
      <% end %>
    </div>
  </div>
</div>




