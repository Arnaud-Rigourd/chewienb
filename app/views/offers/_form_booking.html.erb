
<div class="grid_form_date mt-5">
      <%= simple_form_for [@offer, @booking] do |f| %>
        <%= f.input :start_date, as: :string,
                wrapper_html: { class: "form_title mb-4" },
                label_html: { class: "case_form form-label fw-bold" },
                input_html: { data: { controller: "flatpickr" } } %>
        <%= f.input :end_date, as: :string,
                wrapper_html: { class: "form_title mb-4" },
                label_html: { class: "case_form form-label fw-bold" },
                input_html: { data: { controller: "flatpickr" } } %>
        <%= f.submit class: 'btn btn_form_date'%>
      <% end %>
</div>
